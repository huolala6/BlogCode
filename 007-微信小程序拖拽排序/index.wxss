/* pages/user/pages/area/index.wxss */
.area{
  background: #F5F5F5;
  width: 100vw;
  height: 100vh;
  /* padding: 30rpx; */
  overflow: hidden;
}
.list{
  width: 690rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  margin-top: 30rpx;
  margin-left: 30rpx;
}
.list-item{
  height: 96rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 0 30rpx;
  color: #000000;
  position: relative;
  box-shadow: #1974F0;
}
.kelong{
  width: 690rpx;
  left: 0;
  position: absolute;
  /* box-shadow: 4px 4px 4px black; */
  box-shadow:2px 3px 8px 0px black;
  z-index: 10;
  background: #ffffff;
  border-radius: 20rpx;
}
.kelong .left{
  margin-left: 76rpx;
}
.kelong .right{
  margin-right: 30rpx;
}
.header{
  color: #1974F0;
}
.list-item>view{
  display: flex;
  align-items: center;
}
.list-item .left{
  font-size: 28rpx;
  font-weight: 400;
}
.list-item .left image{
  width: 46rpx;
  height: 46rpx;
  margin-right: 5rpx;
}
.list-item .right{
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.3);
}
.header .right{
  color: #1974F0;
}
.list-item .icon{
  width: 48rpx;
  height: 48rpx;
  margin: 0 24rpx 0 30rpx;
}
.small-icon{
  width: 48rpx;
  height: 48rpx;
}
.footer{
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
  margin-top: 24rpx;
  margin-left: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}